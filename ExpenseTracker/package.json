{
    "name": "ExpenseTracker",
    "version": "0.0.1",
    "private": true,
    "packageManager": "pnpm@9.12.1",
    "engines": {
        "node": ">=22 <23"
    },
    "scripts": {
        "preinstall": "corepack enable",
        "start": "react-native start",
        "android": "react-native run-android",
        "test": "jest",
        "lint": "eslint .",
        "typecheck": "tsc --noEmit",
        "prepare": "husky install",
        "validate": "pnpm lint && pnpm typecheck && pnpm test",
        "format": "prettier --write ."
    },
    "dependencies": {
        "@react-native-vector-icons/material-design-icons": "^12.3.0",
        "@react-native/new-app-screen": "0.81.1",
        "@react-navigation/native": "^7.1.17",
        "@react-navigation/native-stack": "^7.3.26",
        "react": "19.1.1",
        "react-native": "0.81.1",
        "react-native-fs": "^2.20.0",
        "react-native-gesture-handler": "^2.28.0",
        "react-native-paper": "^5.14.5",
        "react-native-safe-area-context": "^5.6.1",
        "react-native-screens": "^4.16.0",
        "react-native-sqlite-storage": "^6.0.1",
        "@react-native-community/netinfo": "^11.3.3",
        "react-native-app-auth": "^8.0.3",
        "react-native-config": "^1.5.1",
        "react-native-keychain": "^9.2.0",
        "react-native-saf-x": "^1.1.0"
    },
    "devDependencies": {
        "@babel/core": "^7.25.2",
        "@babel/preset-env": "^7.25.3",
        "@babel/runtime": "^7.25.0",
        "@eslint/js": "^9.35.0",
        "@react-native-community/cli": "20.0.1",
        "@react-native-community/cli-platform-android": "20.0.1",
        "@react-native-community/cli-platform-ios": "20.0.1",
        "@react-native/babel-preset": "0.81.1",
        "@react-native/metro-config": "0.81.1",
        "@react-native/typescript-config": "0.81.1",
        "@types/jest": "^30.0.0",
        "@types/react": "^19.1.0",
        "@types/react-test-renderer": "^19.1.0",
        "eslint": "^9",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "2.31.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-native": "^5.0.0",
        "globals": "^16.3.0",
        "jest": "^30.1.3",
        "prettier": "3.6.2",
        "react-test-renderer": "19.1.1",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.43.0",
        "husky": "^9.1.4",
        "lint-staged": "^15.4.2",
        "eslint-plugin-no-secrets": "^1.4.1"
    },
    "lint-staged": {
        "*.{json,md,css,scss,ts,tsx,js,jsx}": "pnpm exec prettier --write --ignore-unknown",
        "*.{js,jsx,ts,tsx}": [
            "pnpm exec eslint --max-warnings=0 --fix",
            "pnpm exec jest --bail --findRelatedTests"
        ]
    }
}
