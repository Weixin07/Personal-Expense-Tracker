{
    "name": "ExpenseTracker",
    "version": "0.0.1",
    "private": true,
    "packageManager": "pnpm@9.12.1",
    "engines": {
        "node": ">=22 <23"
    },
    "scripts": {
        "start": "react-native start",
        "android": "react-native run-android",
        "test": "jest",
        "test:performance": "jest src/__tests__/performance/",
        "test:performance:verbose": "jest src/__tests__/performance/ --verbose",
        "test:coverage": "jest --coverage",
        "lint": "eslint .",
        "typecheck": "tsc --noEmit",
        "validate": "pnpm lint && pnpm typecheck && pnpm test",
        "format": "prettier --write .",
        "build:android:release": "cd android && gradlew assembleRelease && cd .."
    },
    "dependencies": {
        "@react-native-community/netinfo": "^11.3.3",
        "@react-native-vector-icons/material-design-icons": "^12.3.0",
        "@react-native/new-app-screen": "^0.82.1",
        "@react-navigation/native": "^7.1.18",
        "@react-navigation/native-stack": "^7.5.1",
        "react": "^19.2.0",
        "react-native": "^0.82.1",
        "react-native-app-auth": "^8.0.3",
        "react-native-config": "^1.5.1",
        "react-native-fs": "2.20.0",
        "react-native-gesture-handler": "^2.29.0",
        "react-native-keychain": "^9.2.0",
        "react-native-paper": "5.14.5",
        "react-native-saf-x": "^2.2.3",
        "react-native-safe-area-context": "5.6.1",
        "react-native-screens": "^4.18.0",
        "react-native-sqlite-storage": "6.0.1"
    },
    "devDependencies": {
        "@babel/core": "^7.28.5",
        "@babel/preset-env": "^7.28.5",
        "@babel/runtime": "^7.28.4",
        "@eslint/js": "^9.38.0",
        "@react-native-community/cli": "^20.0.2",
        "@react-native-community/cli-platform-android": "^20.0.2",
        "@react-native-community/cli-platform-ios": "^20.0.2",
        "@react-native/babel-preset": "^0.82.1",
        "@react-native/metro-config": "^0.82.1",
        "@react-native/typescript-config": "^0.82.1",
        "@testing-library/react-hooks": "^8.0.1",
        "@testing-library/react-native": "^13.3.3",
        "@types/jest": "^30.0.0",
        "@types/react": "^19.2.2",
        "@types/react-test-renderer": "^19.1.0",
        "eslint": "^9.38.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-no-secrets": "^0.8.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.0",
        "eslint-plugin-react-native": "^5.0.0",
        "globals": "^16.4.0",
        "husky": "^9.1.4",
        "jest": "^30.2.0",
        "lint-staged": "^15.4.2",
        "prettier": "3.6.2",
        "react-test-renderer": "^19.2.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.2"
    },
    "lint-staged": {
        "*.{json,md,css,scss,ts,tsx,js,jsx}": "pnpm exec prettier --write --ignore-unknown",
        "*.{js,jsx,ts,tsx}": [
            "pnpm exec eslint --max-warnings=0 --fix",
            "pnpm exec jest --bail --findRelatedTests"
        ]
    },
    "pnpm": {
        "patchedDependencies": {
            "react-native-config": "patches/react-native-config.patch"
        }
    }
}